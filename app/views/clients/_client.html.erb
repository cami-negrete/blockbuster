<div id="<%= dom_id client %>">
  <tr>
    <th scope="row"><%= client.id %></th>
    <td><%= client.name %></td>
    <td><%= client.age %></td>
    <td>
    <%= client.movies.last.present? ? client.movies.last.name : "No hay pelicula arrendada" %>
    </td>
    <td><%= link_to "Ver cliente", client , class:"btn btn-info text-white"%></td>
    <td><%= link_to "Editar", edit_client_path(client) , class:"btn btn-info text-white"%></td>
    <td><%= button_to "Eliminar", @client, method: :delete , class:"btn btn-danger"%></td>
  </tr>
</div>
