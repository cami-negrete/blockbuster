<p style="color: green"><%= notice %></p>

<div class="container">
  <h1 class="text-center">Clientes</h1>
<div class="my-3">
  <%= link_to "Nuevo cliente", new_client_path, class: "text-white btn btn-info "  %>
</div>
  <div id="clients">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Age</th>
          <th scope="col">Movie</th>
          <th scope="col" colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @clients.each do |client| %>
          <%= render client %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
